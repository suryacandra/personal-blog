---
export interface Props {
  title: string;
  sub: string;
  thumb: string;
  desc?: string;
  tags?: string;
}
import "../style/base.css"
import { SEO } from "astro-seo";
const posts = await Astro.glob('../posts/*.mdx')
const tags = [...new Set(posts.map((e:any) => e.tags).toString().split(','))]
const year = [... new Set(posts.map((e:any) => e.upload_date.split(',')[1].trim()))]
const categories = [... new Set(posts.map((e:any) => e.cate).toString().split(','))]
const { title, sub, thumb, desc, tags: tag } = Astro.props;
const { pathname } = Astro.url;
---

<!DOCTYPE html>
<html id="root" data-theme="halloween" lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={tag ? tag : "blog, personal blog, javascript blog, github blog"} />
    <SEO
      title={title}
      description={desc ? desc : sub}
      openGraph={{
        basic: {
          title: sub,
          type: "blog",
          image: thumb,
        },
        image: {
          alt: sub
        }
      }}
    />
  </head>
  <body>
    <main class="relative">
      <div class="flex h-full md:h-screen">
        <div class="flex flex-col w-full">
          <header class="navbar bg-base-300 sticky top-0 z-50">
            <div class="flex-1">
              <a class="btn btn-ghost normal-case text-xl" href="/"
                >Ananta Blog</a
              >
            </div>
            <div class="flex-none">
              <ul class="menu menu-horizontal p-0 gap-5">
                <li class="bg-base-100 hidden xs:block"><a>About Me</a></li>
                <li class="bg-base-100 hidden xs:block">
                  <a
                    href="https://github.com/suryacandra/personal-blog"
                    target="_blank">Source Code</a
                  >
                </li>
                <label class="swap swap-rotate">
                  <!-- this hidden checkbox controls the state -->
                  <input id="theme" type="checkbox" />

                  <!-- sun icon -->
                  <svg
                    id="sun"
                    class="swap-on fill-current w-8 h-8"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    ><path
                      d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
                    ></path>
                  </svg>

                  <!-- moon icon -->
                  <svg
                    id="moon"
                    class="swap-off fill-current w-8 h-8"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    ><path
                      d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
                    ></path>
                  </svg>
                </label>
                <label class=" swap swap-rotate xs:hidden">
                  <input id="hamburger" type="checkbox" />

                  <!-- this hidden checkbox controls the state -->

                  <!-- hamburger icon -->
                  <svg
                    class="swap-off fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 512 512"
                    ><path
                      d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"
                    ></path>
                  </svg>

                  <!-- close icon -->
                  <svg
                    class="swap-on fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 512 512"
                    ><polygon
                      points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49"
                    ></polygon>
                  </svg>
                </label>
              </ul>
            </div>
          </header>
          <div class="flex flex-col md:flex-row h-full md:h-[calc(100vh-64px)] relative">
            <div id="menu" class="ilang absolute top-0 bg-base-300 w-full p-5">
              <ul
                class="flex flex-col gap-2 divide-y-2 divide-base-100 text-center"
              >
                <li>About Me</li>
                <li>
                  <a
                    href="https://github.com/suryacandra/personal-blog"
                    target="_blank">Source Code</a
                  >
                </li>
              </ul>
            </div>
            <main
              class="flex flex-col w-full bg-base-100 md:overflow-y-auto md:scrollbar-thin md:scrollbar-thumb-slate-700 md:scrollbar-track-slate-300"
            >
              <div class="flex w-full mx-auto">
                <div class="flex flex-col w-full h-full gap-2 p-5">
                  <slot />
                </div>
              </div>
            </main>
            <nav class="flex w-full md:w-72 bg-base-300 pt-5 md:p-0">
              <div class="w-full flex">
                <ul class="w-full h-full flex flex-col justify-evenly px-5 gap-5">
                  <li class="bg-base-100 p-2 shadow-sm md:max-h-[25vh] md:overflow-y-auto md:scrollbar-thin md:scrollbar-thumb-slate-700 md:scrollbar-track-slate-300 rounded-md flex flex-col gap-5">
                    <h1 class="text-2xl text-center font-bold underline">
                      Categories
                    </h1>
                    <div class="flex flex-col items-center gap-2">
                      {
                        categories.slice(0, 3).map((e) => (
                          <a
                          rel="prefetch" 
                            href={`/categories/${e}`}
                            class="p-2 border-2 border-slate-400 border-opacity-80 rounded-xl w-full"
                          >
                            {e}
                          </a>
                        ))
                      }
                      <a rel="prefetch"  href="/categories">
                        <button class="btn btn-outline btn-sm btn-info">See more</button>
                      </a>
                    </div>
                  </li>
                  <li class="bg-base-100 p-2 shadow-sm md:max-h-[25vh] md:overflow-y-auto md:scrollbar-thin md:scrollbar-thumb-slate-700 md:scrollbar-track-slate-300 rounded-md flex flex-col gap-5">
                    <h1 class="text-2xl text-center font-bold underline">
                      Archive
                    </h1>
                    <div class="flex flex-col items-center gap-2">
                      {
                        year.slice(0, 3).map((e) => (
                          <a
                          rel="prefetch" 
                            href={`/archive/${e}`}
                            class="btn btn-outline btn-sm w-full"
                          >
                            {e}
                          </a>
                        ))
                      }
                      <a rel="prefetch"  href="/archive">
                        <button class="btn btn-outline btn-sm btn-info">See more</button>
                      </a>
                    </div>
                  </li>
                  {
                    pathname !== "/tags" && (
                      <li class="bg-base-100 p-2 shadow-sm break-words flex flex-col gap-5 md:max-h-[25vh] md:overflow-y-auto md:scrollbar-thin md:scrollbar-thumb-slate-700 md:scrollbar-track-slate-300 rounded-md">
                        <h1 class="text-2xl text-center font-bold underline">
                          Tags
                        </h1>
                        <div class="flex flex-wrap items-center justify-center gap-2 text-white">
                          {tags
                            .splice(0, 15)
                            .sort(() => 0.5 - Math.random())
                            .map((e) => (
                              <a
                              rel="prefetch" 
                                class="bg-info px-2 py-2 rounded-xl active:scale-95"
                                href={`/tags/${e.replace(' ', '_')}`}
                              >
                                {e}
                              </a>
                            ))}
                        </div>
                        <a 
                        rel="prefetch" 
                        href="/tags" class="mx-auto">
                          <button class="btn btn-outline btn-info btn-sm">See more</button>
                        </a>
                      </li>
                    )
                  }
                </ul>
              </div>
            </nav>
            <div class="md:hidden bg-base-300 text-center pt-5">
              Copyright <a
                href="https://github.com/surycacandra"
                class="font-bold">Ananta</a
              >
              <p>
                {new Date().getFullYear()}
              </p>
            </div>
          </div>
        </div>
      </div>
      <div id="toTop" class="fixed md:hidden flex items-center justify-center animate-bounce right-2 bottom-5 bg-primary-content w-[15vw] h-[15vw] rounded-full cursor-pointer">
        <svg width="32" height="32" viewBox="0 0 24 24"><path fill="#888888" d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6l-6 6z"/></svg>
      </div>
    </main>
  </body>
</html>
<script>
  const ham = document.getElementById("hamburger");
  const menu = document.getElementById("menu");
  const theme = document.getElementById("theme") as HTMLInputElement;
  const root = document.getElementById("root");
  const toTop = document.getElementById("toTop")
  const themeTitle = "pastel"

  let toogleMenu = false;
  let toogleTheme = JSON.parse(localStorage.getItem("mode")) || false;
  if (toogleTheme) {
    root.setAttribute("data-theme", themeTitle);
    theme.checked = true;
  }

  theme.onchange = (e) => {
    if (!toogleTheme) {
      root.setAttribute("data-theme", themeTitle);
      toogleTheme = true;
      JSON.stringify(localStorage.setItem("mode", toogleTheme));
      return;
    }
    if (toogleTheme) {
      root.setAttribute("data-theme", "halloween");
      toogleTheme = false;
      JSON.stringify(localStorage.setItem("mode", toogleTheme));
      return;
    }
  };

  ham.onchange = (e) => {
    if (!toogleMenu) {
      menu.style.display = "block";
      toogleMenu = true;
      return;
    }
    if (toogleMenu) {
      menu.style.display = "none";
      toogleMenu = false;
      return;
    }
  };

  
  window.onscroll = (e) => {
    if(window.scrollY < 50) {
      toTop.classList.add('hidden')
    } 
    if(window.scrollY > 50) {
      toTop.classList.remove('hidden')
      toTop.classList.add('visible')
    }
    console.log(window.scrollY)
  }

  toTop.onclick = (e) => {
    window.scroll(0, 0)
  }

</script>
<style is:global>
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .ilang {
    display: none;
  }
</style>
