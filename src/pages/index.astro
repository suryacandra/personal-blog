---
const posts = await Astro.glob('./posts/*.mdx')
import Layout from "../components/Layout.astro";
import ListCard from "../components/ListCard.astro";
---

<Layout title="Welcome to Ananta Blog" sub="This is blog for you" thumb="/favicon.png">
  <div class="flex justify-between bg-info p-2">
    <h1 class="text-2xl">Latest Post</h1>
    <button class="btn btn-outline btn-sm">
        <a rel="prefetch" href={`/posts`}>See more</a>
    </button>
</div>
   <ListCard posts={posts.sort((a:any, b:any) => a.frontmatter.id - b.frontmatter.id)} e={false} content="latest" />
</Layout>
