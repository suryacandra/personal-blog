---
const posts = await Astro.glob('../../posts/*.mdx')
export async function getStaticPaths() {
  const test = await Astro.glob('../../posts/*.mdx')
  return test.map((e:any) => ({
        params: {
            posts: e.title.replace(/[ ]/g, '_')
        }
    }))}
import Layout from "../../components/Layout.astro";
const {posts: data} = Astro.params
const find = posts.find((e:any) => e.title.replace(/[ ]/g, '_') === data)
const {Content, title, sub, thumb, desc, tags}:any = find
---
<Layout title={title} sub={sub} thumb={thumb} desc={desc} tags={tags}>
  <Content /> 
</Layout>

